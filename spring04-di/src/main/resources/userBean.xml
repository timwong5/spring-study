<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:p="http://www.springframework.org/schema/p"

       xmlns:c="http://www.springframework.org/schema/c"


       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--       p命名空间约束 通过属性注入 property xmlns:p="http://www.springframework.org/schema/p"-->



    <bean id="user" class="com.timwang5.pojo.User" p:name="tim" p:age="25"/>


<!--    c命名空间约束  通过构造器注入 construct  xmlns:c="http://www.springframework.org/schema/c"-->


    <bean id="user2" class="com.timwang5.pojo.User" c:age="19" c:name="timwang5"/>





</beans>